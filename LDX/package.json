{
  "name": "knowledge-graph-frontend",
  "version": "1.0.0",
  "description": "跨学科知识图谱可视化系统",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo '前端为静态文件，无需构建'",
    "docker:build": "docker build -t kg-frontend .",
    "docker:run": "docker run -p 3000:3000 --name kg-frontend --env-file .env kg-frontend",
    "docker:compose": "docker-compose up -d",
    "docker:compose:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:logs": "docker-compose logs -f",
    "docker:stop": "docker-compose down",
    "docker:clean": "docker system prune -af --volumes"
  },
  "dependencies": {
    "http": "0.0.1-security",
    "fs": "0.0.1-security",
    "path": "0.12.7",
    "url": "0.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "knowledge-graph",
    "visualization",
    "cross-disciplinary",
    "echarts"
  ],
  "author": "Your Name",
  "license": "MIT"
}
